{
  "extends": "./whop-app/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "./whop-app",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"],
      "@/app/*": ["app/*"],
      "@/src/*": ["src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["whop-app"],
  "exclude": ["node_modules"]
}
